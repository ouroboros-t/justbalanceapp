<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="balanceViewModel"
            type="com.pg.justbalance.screens.balance.BalanceViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/just_balance_logo"
                    android:layout_width="421dp"
                    android:layout_height="211dp"
                    app:layout_constraintBottom_toTopOf="@+id/balances_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.444"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.067"
                    app:srcCompat="@drawable/just_balance_logo" />

                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="112dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/blue"
                    android:text="@string/edit_balance_button"
                    app:layout_constraintBottom_toTopOf="@+id/balances_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/add_button"
                    app:layout_constraintTop_toBottomOf="@+id/just_balance_logo"
                    app:layout_constraintVertical_bias="0.483" />

                <Button
                    android:id="@+id/add_button"
                    android:layout_width="112dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="156dp"
                    android:backgroundTint="@color/blue"
                    android:text="@string/add_balance_button"
                    app:layout_constraintBottom_toTopOf="@+id/balances_list"
                    app:layout_constraintEnd_toStartOf="@+id/edit_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/just_balance_logo"
                    app:layout_constraintVertical_bias="0.483" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/balances_list"
                    android:layout_width="419dp"
                    android:layout_height="432dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/your_balances" />

                <TextView
                    android:id="@+id/your_balances"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="162dp"
                    android:layout_marginTop="42dp"
                    android:layout_marginEnd="161dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/your_balances"
                    app:layout_constraintBottom_toTopOf="@+id/balances_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/just_balance_logo" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>