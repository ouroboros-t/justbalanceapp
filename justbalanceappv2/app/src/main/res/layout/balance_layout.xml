<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="balanceViewModel"
            type="com.pg.justbalance.screens.balance.BalanceViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bgColor">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="409dp"
            android:layout_height="513dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/just_balance_logo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/balances_list"
                    android:layout_width="391dp"
                    android:layout_height="370dp"
                    android:layout_marginTop="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/your_balances"
                    app:layout_constraintVertical_bias="0.031" />

                <TextView
                    android:id="@+id/your_balances"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="162dp"
                    android:layout_marginTop="42dp"
                    android:layout_marginEnd="161dp"
                    android:text="@string/your_balances"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/just_balance_logo"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/balance_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="333dp"
                    android:layout_marginBottom="489dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/total_balance_textview"
                    android:layout_width="155dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="332dp"
                    android:layout_marginBottom="93dp"
                    android:text="Total Balance:"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/balances_list"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/total_balance_amount_textView"
                    android:layout_width="88dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="140dp"
                    android:layout_marginBottom="100dp"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/total_balance_textview"
                    app:layout_constraintTop_toBottomOf="@+id/balances_list"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/just_balance_logo"
            android:layout_width="238dp"
            android:layout_height="190dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="87dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/just_balance_logo" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="23dp"
            android:layout_height="24dp"
            android:layout_marginTop="169dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/trash"
            android:labelFor="@id/clear_button"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toEndOf="@+id/just_balance_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>